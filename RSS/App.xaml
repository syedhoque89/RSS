<?xml
    version="1.0"
    encoding="utf-8"?>

<Application
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:valueConverters="clr-namespace:RSS.ValueConverters;assembly=RSS"
    x:Class="RSS.App">
    <Application.Resources>
        <!-- Colours -->
        <Color
            x:Key="PrimaryColor">
            #bb1919
        </Color>
        <Color
            x:Key="PrimaryDarkColor">
            #1976D2
        </Color>
        <Color
            x:Key="Accent">
            #96d1ff
        </Color>
        <Color
            x:Key="LightBackgroundColor">
            #FAFAFA
        </Color>
        <Color
            x:Key="DarkBackgroundColor">
            #C0C0C0
        </Color>
        <Color
            x:Key="MediumGrayTextColor">
            #4d4d4d
        </Color>
        <Color
            x:Key="LightTextColor">
            #999999
        </Color>
        <Color
            x:Key="OfflineColor">
            DarkGray
        </Color>
        <Color
            x:Key="SavedColor">
            #005307
        </Color>
        <Color
            x:Key="BottomBarSelectedTextColor">
            #B7D0E7
        </Color>
        <!-- Styles -->
        <OnPlatform
            x:Key="FontAwesomeSolid"
            x:TypeArguments="x:String">
            <On
                Platform="iOS"
                Value="Font Awesome 5 Free" />
            <On
                Platform="Android"
                Value="fa-solid-900.ttf#Font Awesome 5 Free Solid" />
        </OnPlatform>
        <OnPlatform
            x:Key="RobotoLightFont"
            x:TypeArguments="x:String">
            <On
                Platform="iOS"
                Value="Roboto-Light" />
            <On
                Platform="Android"
                Value="Roboto-Light.ttf#Roboto-Light" />
        </OnPlatform>
        <OnPlatform
            x:Key="RobotoRegularFont"
            x:TypeArguments="x:String">
            <On
                Platform="iOS"
                Value="Roboto-Regular" />
            <On
                Platform="Android"
                Value="Roboto-Regular.ttf#Roboto-Regular" />
        </OnPlatform>
        <OnPlatform
            x:Key="RobotoBoldFont"
            x:TypeArguments="x:String">
            <On
                Platform="iOS"
                Value="Roboto-Bold" />
            <On
                Platform="Android"
                Value="Roboto-Bold.ttf#Roboto-Bold" />
        </OnPlatform>
        <Style
            TargetType="Label">
            <Setter
                Property="FontFamily"
                Value="{StaticResource RobotoRegularFont}" />
            <Setter
                Property="TextColor"
                Value="Black" />
        </Style>
        <!-- Value Converters -->
        <valueConverters:BoolReverseConverter
            x:Key="BoolReverseConverterKey" />
        <valueConverters:BoolToOfflineColorConverter
            x:Key="BoolToOfflineColorConverterKey" />
    </Application.Resources>
</Application>